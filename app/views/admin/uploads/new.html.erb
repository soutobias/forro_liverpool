<h1>Upload Image</h1>

<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with url: admin_uploads_path, local: true, method: :post, multipart: true do |form| %>
  <div>
    <%= form.label :file, "Select Image" %>
    <%= form.file_field :file %>
  </div>
  <div>
    <%= form.submit "Upload" %>
  </div>
<% end %>

<% if @uploaded_url %>
  <h2>Uploaded File URL</h2>
  <input type="text" value="<%= @uploaded_url %>" readonly>
  <button onclick="navigator.clipboard.writeText('<%= @uploaded_url %>')">Copy URL</button>
<% end %>
